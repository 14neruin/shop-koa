<%body=`<h1>${lang.basket}</h1>`%>

<% var sum = 0, id = -1
	for(var i=0; i < basket.length; i++){
		for(var j=0; j < prod.length; j++){
			if(prod[j].id_product == basket[i].id){
				id = j
				break
			}
		}
%>
<%body+=`
<div class="basketprod" id="basketel">
	<div id="basketel" class="deletetobasket_full" onclick="deletetobasket(${prod[id].id_product});">${lang.delete}</div>
	<div id="basketel" class="basketimg" style="background-image: url(gallery/${prod[id].photos_id});"></div>
	<div id="basketel" class="basketname">${prod[id].prodname}</div>
	<div id="basketel" class="basketprodprice">`
		var prodsum = Number(prod[id].price) * Number(basket[i].col);
		sum+=prodsum;
		body+=`
		<div id="basketel" style="font-size:11;margin-right: -10px">
			<span class="editbasket" onclick="basket.correct(${prod[id].id_product}, -1)">-</span> 
			${basket[i].col} x ${prod[id].price} &#8381; 
			<span class="editbasket" onclick="basket.correct(${prod[id].id_product}, 1)">+</span>
		</div> 
		${prodsum} &#8381;
	</div>
</div>
`%>
<%} %>

<% if(basket.length == 0){
	body += `
	<div class="basketprod" id="basketel">
		<center id="basketel">${lang.noprod}</center>
	</div>`
}

body += `
<div class="basketend" id="basketel">
	<div style="padding:0 10px;" id="basketel">
		${lang.total}
		<div id="basketprice" id="basketel">
			${sum} &#8381;
		</div>
	</div>
</div>`

if(basket.length != 0){
	body = `
	<a id="basketel" href="/order">
		<div id="basketel" class="topay">${lang.toOrder}</div>
	</a>`
}%>

